{
  "name": "fullstacktypescriptproject",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "npm run server",
    "server": "cd server && npm run server",
    "client": "cd ./client && npm start",
    "startdev": "concurrently --kill-others \"npm run client\" \"npm run server\" ",
    "build": "concurrently \"cd client && npm run build\"",
    "postinstall": "yarn postinstall:server && yarn postinstall:client",
    "postinstall:server": "cd server && yarn install --production=false ",
    "postinstall:client": "cd client && yarn install --production=false && yarn build"
  },
  "engines": {
    "node": "^8.11.3",
    "yarn": "^1.9.2"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "concurrently": "^5.0.0"
  }
}
